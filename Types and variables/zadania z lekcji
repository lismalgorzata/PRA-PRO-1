print("Temperatura w stopniach Celsjusza: ")
tempc=int(input())
tempf=(tempc*(9/5))+32
print(f"Temperatura w stopniach Fahrenheita: {tempf}")
tempk=tempc+273
print(f"Temperatura w stopniach Kelwina: {tempk}")
